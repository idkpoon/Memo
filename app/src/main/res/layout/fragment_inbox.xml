<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.memo.fragments.InboxFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_inbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_inbox"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/displayNumViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_of_rows"
        android:textSize="14sp"
        android:layout_below="@+id/tv_inbox"
        android:layout_marginTop="50dp"/>

    </RelativeLayout>
</FrameLayout>
